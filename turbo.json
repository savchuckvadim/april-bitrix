{
    "$schema": "https://turbo.build/schema.json",
    "ui": "tui",
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "inputs": [
                "$TURBO_DEFAULT$",
                ".env*"
            ],
            "outputs": [
                ".next/**",
                "!.next/cache/**",
                "src/generated/**"
            ],
            "env": [
                "ONLINE_API_KEY",
                "LOG_FILE_PATH",
                "IN_BITRIX",
                "PUPPETEER_EXECUTABLE_PATH",
                "PDF_PREVIEW_URL",
                "REDIS_HOST"
            ]
        },
        "lint": {
            "dependsOn": [
                "^lint"
            ],
            "env": [
                "ONLINE_API_KEY",
                "LOG_FILE_PATH",
                "IN_BITRIX",
                "PUPPETEER_EXECUTABLE_PATH",
                "PDF_PREVIEW_URL",
                "REDIS_HOST"
            ]
        },
        "check-types": {
            "dependsOn": [
                "^check-types"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true,
            "env": [
                "ONLINE_API_KEY",
                "LOG_FILE_PATH",
                "IN_BITRIX",
                "PUPPETEER_EXECUTABLE_PATH",
                "PDF_PREVIEW_URL",
                "REDIS_HOST"
            ]
        }
    }
}
