{
    "extends": "@workspace/typescript-config/nextjs.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["./*"],
            "@konstructor/*": ["./modules/konstructor/*"],
            "@workspace/ui/*": ["../../packages/ui/src/*"],
            "@workspace/april-ui/*": ["../../packages/april-ui/*"]
        },
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": [
        "next-env.d.ts",
        "next.config.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "../../packages/api/src/services/online/type/setup-type.ts"
    ],
    "exclude": ["node_modules"]
}
